<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/book"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/textBook"/>

    <TextView android:text="@string/chapter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editBook"
        android:id="@+id/textChapter"/>

    <TextView android:text="@string/verse"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editChapter"
        android:id="@+id/textVerse"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter Book..."
        android:id="@+id/editBook"
        android:layout_below="@+id/textBook"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter Chapter..."
        android:id="@+id/editChapter"
        android:layout_below="@+id/textChapter"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter Verse(s)..."
        android:id="@+id/editVerse"
        android:layout_below="@+id/textVerse"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editVerse"
        android:text="Submit"
        android:id="@+id/buttonSubmit"
        android:onClick="share"/>

</RelativeLayout>
